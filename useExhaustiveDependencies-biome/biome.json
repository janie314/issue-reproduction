{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "ignore": [
      "**/src/main.tsx",
      "**/tsconfig.app.json",
      "**/tsconfig.node.json",
      "eslint.config.js",
      "vite.config.ts"
    ],
    "rules": {
      "complexity": {
        "noStaticOnlyClass": "off"
      },
      "correctness": {}
    }
  },
  "formatter": {
    "ignore": [
      "**/src/main.tsx",
      "**/tsconfig.app.json",
      "**/tsconfig.node.json",
      "eslint.config.js",
      "vite.config.ts"
    ]
  },
  "css": {
    "formatter": {
      "indentStyle": "space"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  },
  "javascript": {
    "formatter": {
      "indentStyle": "space"
    }
  },
  "files": {
    "ignoreUnknown": true,
    "maxSize": 8388608
  }
}
